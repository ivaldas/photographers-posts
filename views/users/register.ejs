<% layout('layouts/boilerplate') %>
<div class="container-fluid my-auto">
    <div class="row">
      <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title text-center">Register</h3>
          <form action="/register" method="post" class="validated-form" novalidate>
            <div class="input-group mb-3">
              <label for="username"></label>
              <input type="text" name="username" id="username" class="form-control" placeholder="Username" aria-label="username" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group mb-3">
              <label for="email"></label>
              <input type="email" name="email" id="email" class="form-control" placeholder="email@" aria-label="email" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group mb-3">
              <label for="password"></label>
              <input type="password" name="password" id="password" class="form-control" placeholder="password" aria-label="password" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-around">
              <a class="btn btn-modified btn-outline-secondary btn-sm" href="/photographers" role="button">Back</a>
              <button type="submit" value="Submit" class="btn btn-outline-success btn-modified btn-sm">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>