<% layout('layouts/boilerplate') %>

  <div class="container-fluid my-auto">
    <div class="row">
      <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
          <div class="img-thumbnail">
            <h3 class="card-title text-center">Edit Photographer:</h3>
            <img src=<%= photographer.image %>  class="card-img-top img-fluid" alt="...">
          </div>
          <form action="/photographers/<%= photographer._id %>?_method=put" method="post" class="validated-form" novalidate>
            <div class="input-group mb-3">
              <label for="name"></label>
              <input type="text" name="photographer[name]" id="name" class="form-control" placeholder="Photographers Name" aria-label="name" value="<%= photographer.name %>" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group">
              <label for="subscribers"></label>
              <input type="text" name="photographer[subscribers]" id="subscribers" class="form-control" placeholder="Subscribers" aria-label="subscribers" value="<%= photographer.subscribers %>" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group-lg mb-3">
              <label for="description"></label>
              <textarea class="form-control card-text" name="photographer[description]" id="description" placeholder="Write your description" aria-label="description" required><%= photographer.description %></textarea>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group mb-3">
              <label for="image"></label>
              <input type="text" name="photographer[image]" id="image" class="form-control" placeholder="image link" aria-label="image" value="<%= photographer.image %>" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-around">
              <a class="btn btn-modified btn-outline-secondary btn-sm" href="/photographers/<%= photographer._id %>" role="button">Back to Photographer</a>
              <button type="submit" value="Submit" class="btn btn-outline-success btn-modified btn-sm">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>