<% layout('layouts/boilerplate') %>

  <div class="container-fluid my-auto">
    <div class="row">
      <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title text-center">Make a New <%= photographer.name %>'s Post</h3>
          <form action="/photographers/<%= photographer._id %>" method="post" class="validated-form" novalidate>
            <div class="input-group-lg mb-3">
              <label for="title"></label>
              <textarea class="form-control card-text" name="post[title]" id="title" placeholder="Write your photos title" aria-label="title" required></textarea>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group mb-3">
              <label for="image"></label>
              <input type="text" name="post[image]" id="image" class="form-control" placeholder="image URL" aria-label="image" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-around">
              <a class="btn btn-modified btn-outline-secondary btn-sm" href="/photographers/<%= photographer._id %>" role="button">Back to Photographer</a>
              <button type="submit" value="Submit" class="btn btn-outline-success btn-modified btn-sm">Submit Your Post</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>