<% layout('layouts/boilerplate') %>

  <div class="container-fluid my-auto">
    <div class="row">
      <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
          <div class="img-thumbnail">
            <h3 class="card-title text-center">Edit <%= photographer.name %>'s Post:</h3>
            <img src=<%= post.image %>  class="card-img-top img-fluid" alt="...">
          </div>
          <form action="/photographers/<%= photographer._id %>/<%= post._id %>?_method=put" method="post" class="validated-form" novalidate>
            <div class="input-group-lg mb-3">
              <label for="title"></label>
              <textarea class="form-control card-text" name="post[title]" id="title" placeholder="Write your photos title" aria-label="title" required><%= post.title %></textarea>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="input-group mb-3">
              <label for="image"></label>
              <input type="text" name="post[image]" id="image" class="form-control" placeholder="image URL" aria-label="image" value="<%= post.image %>" required>
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-around">
              <a class="btn btn-modified btn-outline-secondary btn-sm" href="/photographers/<%= photographer._id %>" role="button">Back to Photographer</a>
              <a class="btn btn-modified btn-outline-warning btn-sm" href="/photographers/<%= photographer._id %>/<%= post._id %>" role="button">Back to Post</a>
              <button type="submit" value="Submit" class="btn btn-outline-success btn-modified btn-sm">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>